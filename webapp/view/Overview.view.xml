<mvc:View
    controllerName="todoApp.controller.Overview"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Panel id="idtodoPanel">
        <FlexBox
            id="idTodoInputFlexBox"
            direction="Column"
            alignItems="Center"
        >
            <Title
                id="idGenTitle"
                text="{i18n>todoInputLabel}"
            />
            <Input
                id="idtodoInput"
                placeholder="{i18n>todoInputPlaceholder}"
                submit=".onInputSubmit"
            />
        </FlexBox>
    </Panel>
    <Panel id="idTodoListPanel">
        <List
            id="idTodosList"
            items="{todos>/todos}"
        >
            <CustomListItem id="idCustomListItem">
                <FlexBox
                    id="idTodoItemFlexBox"
                    direction="Row"
                    alignItems="Center"
                    justifyContent="SpaceBetween"
                >
                    <HBox id="idtodoItemHBox">
                        <FlexBox
                            id="idTodoItemWrapperFlexBox"
                            alignItems="Center"
                        >
                            <CheckBox
                                id="idTodoItemCheckBox"
                                selected="{todos>completed}"
                            />
                            <Text
                                id="idTodoItemText"
                                text="{todos>todo}"
                            >
                                <customData>
                                    <core:CustomData
                                        key="todo-item-completed"
                                        value="{=String(${todos>completed})}"
                                        writeToDom="true"
                                    />
                                </customData>
                            </Text>
                        </FlexBox>
                    </HBox>
                    <Button
                        id="idTodoItemDeleteButton"
                        icon="sap-icon://delete"
                        press=".onButtonDeletePress(${todos>id})"
                    />
                </FlexBox>
            </CustomListItem>
        </List>
    </Panel>
</mvc:View>
