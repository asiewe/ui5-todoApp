<c:FragmentDefinition
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Dialog
        id="idLoginDialog"
        title="{i18n>LOGIN_DIALOG_TITLE}"
    >
        <form:SimpleForm
            id="idLoginSimpleForm"
            layout="ResponsiveGridLayout"
            editable="true"
        >
            <Label
                id="idUsernameLabel"
                labelFor="idUsernameInput"
                text="{i18n>USERNAME_LABEL}"
            />
            <Input
                id="idUsernameInput"
                value="{login>/username}"
            />
            <Label
                id="idPasswordLabel"
                labelFor="idPasswordInput"
                text="{i18n>PASSWORD_LABEL}"
            />
            <Input
                id="idPasswordInput"
                type="Password"
                value="{login>/password}"
            />
            <FlexBox
                id="idFlexBox"
                justifyContent="Center"
                class="sapUiMediumMarginTop"
            >
                <Button
                    id="idCancelButton"
                    type="Reject"
                    text="{i18n>CANCEL_BUTTON_LABEL}"
                    class="sapUiSmallMarginEnd"
                    press=".onButtonCancelLoginPress"
                />
                <Button
                    id="idLoginFormLoginButton"
                    text="{i18n>LOGIN_BUTTON_LABEL}"
					press=".onButtonLoginPress"
                />
            </FlexBox>
        </form:SimpleForm>
    </Dialog>
</c:FragmentDefinition>
